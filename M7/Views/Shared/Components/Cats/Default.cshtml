@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
        <a class="btn btn-block btn-info" asp-action="Index" asp-controller="Home"  asp-route-category="" asp-route-pageNum="1" >Home</a>

        @foreach (string c in Model)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-category="@c" asp-route-pageNum="1"
               class="btn @( c == ViewBag.SelectedCategory ? "btn-primary" :  "btn-outline-secondary")">@c</a>
        }
</div>